<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>DAOpelicula</servlet-name>
        <servlet-class>DAO.DAOpelicula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Conexion</servlet-name>
        <servlet-class>Model.Conexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrudPelicula</servlet-name>
        <servlet-class>Model.CrudPelicula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrudGenero</servlet-name>
        <servlet-class>Model.CrudGenero</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Nuevo</servlet-name>
        <servlet-class>Controller.Nuevo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DAOpelicula</servlet-name>
        <url-pattern>/DAOpelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Conexion</servlet-name>
        <url-pattern>/Conexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrudPelicula</servlet-name>
        <url-pattern>/CrudPelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrudGenero</servlet-name>
        <url-pattern>/CrudGenero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Nuevo</servlet-name>
        <url-pattern>/Nuevo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
